@model Agenda.Presentation.Models.AccountRegisterModel

@{
    Layout = "~/Views/Shared/AccountLayout.cshtml";
}
<div class="text-center">
    <h3>Crie sua conta de acesso</h3>
    <p>Preencha o formulário para realizar o seu cadastro.</p>
    <hr />
</div>

@using(Html.BeginForm())
{
    <div class="mb-2">
        <label>Nome do usuário:</label>
        @Html.TextBoxFor(model => model.Nome, new { @class="form-control" })
        <div class="text-danger">@Html.ValidationMessageFor(model => model.Nome)</div>
    </div>

    <div class="mb-2">
        <label>Email de acesso:</label>
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
        <div class="text-danger">@Html.ValidationMessageFor(model => model.Email)</div>
    </div>

    <div class="mb-2">
        <label>Senha de acesso:</label>
        @Html.PasswordFor(model => model.Senha, new { @class = "form-control" })
        <div class="text-danger">@Html.ValidationMessageFor(model => model.Senha)</div>
    </div>

    <div class="mb-2">
        <label>Confirme sua senha:</label>
        @Html.PasswordFor(model => model.SenhaConfirmada, new { @class = "form-control" })
        <div class="text-danger">@Html.ValidationMessageFor(model => model.SenhaConfirmada)</div>
    </div>

    <div class="mb-2">
        <div class="d-grid">
            <input type="submit" class="btn btn-success" value="Realizar Cadastro" />
        </div>
    </div>

    <div class="mb-2">
        <div class="d-grid">
            <a href="/Account/Login" class="btn btn-primary">
                Já possui conta? <strong>Acesse aqui!</strong>
            </a>
        </div>
    </div>

    <div class="mb-2">
           <strong>
               @TempData["Mensagem"]
           </strong>
    </div>
}